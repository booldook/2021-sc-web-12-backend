<%- include('../inc/head') %> 
<%- include('../inc/header') %> 
<link rel="stylesheet" href="/css/gbook.css">
<div class="wrapper">
	<%- include('../inc/title', { title: '한줄 방명록' }) %> 
	<div class="gbook-wrapper">
		<form action="/gbook/save" method="POST" class="form-inline">
			<input type="text" name="content" class="input-content form-control" placeholder="한마디 남겨주세요." autofocus>
			<button class="btn btn-primary">등록</button>
		</form>
		<table class="table gbook-tb">
			<thead class="thead-dark">
				<tr>
					<th>번호</th>
					<th>내용</th>
					<th>등록일</th>
				</tr>
			</thead>
			<tbody>
				<% for(let v of gbook) { %>
					<%- include('./list', { v }) %> 
				<% } %>
			</tbody>
		</table>
	</div>
</div>
<script src="/js/gbook.js"></script>
<%- include('../inc/foot') %> 